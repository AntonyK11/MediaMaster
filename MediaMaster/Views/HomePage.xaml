<?xml version="1.0" encoding="utf-8" ?>

<Page
    x:Class="MediaMaster.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:customControls="using:MediaMaster.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MediaMaster.DataBase.Models"
    xmlns:winUiCommunity="using:WinUICommunity"
    NavigationCacheMode="Disabled"
    SizeChanged="HomePage_OnSizeChanged"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="MediaTemplate" x:DataType="models:Media">
            <ItemContainer
                x:Name="hi"
                Height="222"
                MaxWidth="350"
                DataContext="{x:Bind}"
                PointerEntered="element_PointerEntered"
                PointerExited="element_PointerExited"
                PointerPressed="element_PointerPressed"
                Tapped="element_PointerReleased">

                <customControls:MediaViewer
                    ForceUpdate="False"
                    IconHeight="76"
                    IconMargin="26"
                    IsCompact="True"
                    Media="{x:Bind}" />
            </ItemContainer>
        </DataTemplate>
    </Page.Resources>

    <Grid
        x:Name="ContentGrid"
        Padding="{StaticResource NavigationViewPageContentMargin}"
        HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                x:Name="ContentColumn"
                Width="*"
                MinWidth="150" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                x:Name="PaneColumn"
                Width="350"
                MinWidth="150" />
        </Grid.ColumnDefinitions>

        <controls:GridSplitter
            x:Name="ContentSizer"
            Grid.Column="1"
            CornerRadius="8, 0, 0, 0"
            ResizeBehavior="PreviousAndNext" />

        <customControls:MediaViewer
            x:Name="MediaViewer"
            Grid.Column="2"
            CornerRadius="0, 8, 0, 0"
            DelayIconLoading="False"
            IconMargin="16"
            ImageMode="ThumbnailOnly" />

        <Grid Grid.Column="0" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Click="ButtonBase_OnClick">Refresh</Button>
                <ToggleButton x:Name="MultiSelectButton" Grid.Column="1">
                    MultiSelect
                </ToggleButton>
            </Grid>

            <ItemsView
                x:Name="MediaItemsView"
                Grid.Row="2"
                Padding="0,2,17,0"
                ItemTemplate="{StaticResource MediaTemplate}"
                SelectionChanged="MediaItemsView_OnSelectionChanged"
                SelectionMode="{x:Bind MultiSelectButton.IsChecked, Mode=OneWay, Converter={StaticResource BoolToSelectionModeConverter}}">
                <ItemsView.Layout>
                    <UniformGridLayout
                        ItemsStretch="Fill"
                        MinColumnSpacing="8"
                        MinRowSpacing="8" />
                </ItemsView.Layout>
            </ItemsView>

            <winUiCommunity:PagerControl
                Grid.Row="3"
                DisplayMode="NumberBox"
                NumberOfPages="100" />
        </Grid>
    </Grid>
</Page>