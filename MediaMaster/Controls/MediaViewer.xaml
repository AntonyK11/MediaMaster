<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MediaMaster.Controls.MediaViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MediaMaster.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Background="{x:Bind Background, Mode=OneWay}"
        CornerRadius="{x:Bind CornerRadius, Mode=OneWay}"
        Orientation="Vertical"
        Spacing="16">
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>-->

        <Border
            Height="300"
            HorizontalAlignment="Stretch"
            Background="{ThemeResource LayerFillColorDefaultBrush}">
            <local:MediaIcon
                x:Name="MediaIcon"
                MaxHeight="300"
                ImageMode="ThumbnailOnly" />
        </Border>

        <Grid
            MinHeight="24"
            Margin="16,0"
            HorizontalAlignment="Center"
            ColumnSpacing="12">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="4">
                <Image Name="MediaExtensionIcon" />
            </Border>

            <!--<TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Style="{StaticResource BodyStrongTextBlockStyle}"
                Text="{x:Bind Media.Name, Mode=OneWay, FallbackValue=Media_not_found}"
                TextWrapping="WrapWholeWords" />-->
            <local:EditableTextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                PlaceholderText="Media Name"
                Text="{x:Bind Media.Name, Mode=OneWay, FallbackValue=Media_not_found}" />
        </Grid>

        <local:TagView x:Name="TagView">

            <local:TagView.Layout>
                <FlowLayout MinColumnSpacing="4" MinRowSpacing="4" />
            </local:TagView.Layout>

        </local:TagView>

    </StackPanel>
</UserControl>
