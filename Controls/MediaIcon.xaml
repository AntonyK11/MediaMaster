<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MediaMaster.Controls.MediaIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        CornerRadius="8">
        <Grid>
            <ProgressRing
                x:Name="ProgressRing"
                x:Load="{x:Bind LoadIcon}"
                IsActive="True"
                Visibility="{x:Bind Image.Source, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}" />
            <Image Name="Image" Visibility="{x:Bind Image.Source, Converter={StaticResource NullToVisibilityConverterInverted}, Mode=OneWay}">
                <Image.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="OpenMediaFlyout" Text="Open Media" />
                        <MenuFlyoutItem x:Name="OpenFolderFlyout" Text="Open Folder" />
                    </MenuFlyout>
                </Image.ContextFlyout>
            </Image>
        </Grid>
    </Border>
</UserControl>
